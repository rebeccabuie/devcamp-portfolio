<%= form_for @portfolio_item do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

        <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>
  </div>
 

  <hr>

  <div class="col-md-12">
    <h2>Technologies Used</h2>
    <div>
      <%= f.fields_for :technologies do |technology_form| %>
        <div class="form-group">
          <%= tech_form.label :name %>
          <%= tech_form.text_field :name, class: 'form-control'%>
        </div>
      <% end %>
    </div>

  <!--   <div class="form-group">
      <%= f.label :thumb_image %>
      <%= f.text_area :thumb_image %>
    </div>

     <div class="form-group">
      <%= f.label :main_image %>
      <%= f.text_area :main_image %>
    </div> -->

    <div class="form-group">
      <%= f.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>